{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/Sencilla.sln",
                "--consoleLoggerParameters:ForceConsoleColor"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/Sencilla.sln",
                "--no-incremental",
                "--consoleLoggerParameters:ForceConsoleColor"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "clean",
                "${workspaceFolder}/Sencilla.sln",
                "--consoleLoggerParameters:ForceConsoleColor"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "restore",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "restore",
                "${workspaceFolder}/Sencilla.sln"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "copy-nuget-to-local",
            "type": "shell",
            "command": "sh",
            "args": [
                "${workspaceFolder}/builds/nugets.sh"
            ],
            "group": "build",
            "dependsOn": "build",
            "dependsOrder": "sequence",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
